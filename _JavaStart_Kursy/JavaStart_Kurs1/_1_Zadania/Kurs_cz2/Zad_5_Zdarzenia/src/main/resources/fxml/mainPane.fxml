<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.kurs.apka.controller.MainPaneController">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="leftTextArea" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <TextArea fx:id="rightTextArea" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
   <bottom>
      <Button fx:id="clearButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Clear windows" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
