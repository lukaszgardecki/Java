<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.javastart.fxcss.controller.MainPaneController">
   <children>
      <TextArea fx:id="mainTextArea" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      <HBox VBox.vgrow="NEVER">
         <children>
            <Button fx:id="upperCaseButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="yellowButton" text="UPPER" HBox.hgrow="ALWAYS" />
            <Button fx:id="lowerCaseButton" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="yellowButton" text="lower" HBox.hgrow="ALWAYS" />
            <Button id="clearButton" fx:id="clearButton" layoutX="62.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Clear" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
