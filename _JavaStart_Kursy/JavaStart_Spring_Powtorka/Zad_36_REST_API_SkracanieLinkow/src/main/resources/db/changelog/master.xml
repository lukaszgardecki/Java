<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="0001" author="lukas">
        <createTable tableName="link">
            <column name="id" type="VARCHAR(10)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="target_url" type="VARCHAR(250)"/>
            <column name="redirect_url" type="VARCHAR(250)"/>
            <column name="visits" type="BIGINT"/>
        </createTable>
    </changeSet>

    <include file="../testdata/testdata.sql" relativeToChangelogFile="true"/>

</databaseChangeLog>